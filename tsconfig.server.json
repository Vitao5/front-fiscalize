{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "es2022",
    "types": ["node"],
    "module": "es2022",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "nodenext",
  },

  "files": [
    "src/main.server.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule"
  }
}
